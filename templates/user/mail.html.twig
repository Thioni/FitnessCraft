{% extends "base.html.twig" %}

{% block title %}Liste des comptes utilisateurs{% endblock %}

{% block body %}

     <section class="row m-0 justify-content-center">
       <div class="col text-center">
         <h3>Modifier l'email</h3>
       </div>
     </section>

    {{ form_start(mailForm) }}

     <section class="row m-0 justify-content-center">
       <div class="mt-1 col-sm-4 col-lg-3 col-xl-3 col-xxl-2 text-center">
         {{ form_row(mailForm.email) }}
       </div>
     </section>
     <section class="row m-0 justify-content-center">
       <div class="col-sm-3 col-lg-3 col-xl-2 text-center"> 
         <input type="submit" value="Modifier" class="btn btn-warning mt-3">
       </div>
     </section>

    {{ form_end(mailForm) }}

{% endblock %}